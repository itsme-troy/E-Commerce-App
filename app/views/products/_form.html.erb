
<%# display error messages %>
<% if product.errors.any? %>
  <div class="error-messages">
    <h3><%= pluralize(product.errors.count, "error") %> prevented this product from being saved:</h3>
    <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_with model: product, html: { multipart:true, class: "product-form" } do |form| %>
    <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
    </div>
  
    <div class="form-group">
        <%= form.label :featured_image, style: "display: block" %>
        <%= form.file_field :featured_image, accept: "image/*", class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :inventory_count, style: "display: block" %>
        
        <div class="input-with-unit">     
            <%= form.number_field :inventory_count, { class: "form-control", min:0, placeholder: "0" } %>
            <span> pcs </span>
        </div> 
    </div>

    <div class="field">
        <%= form.label :category_id %>
        <%= form.collection_select :category_id, Category.all, :id, :name, include_blank: true %>
    </div>

    <div class="form-group">
        <%= form.label :description, style: "display: block" %>
        <%= form.rich_text_area :description %>
    </div>
 
    
    <div class="form-actions">
        <%= form.submit "Save Product", class: "btn" %>
    </div>

<% end %>
  