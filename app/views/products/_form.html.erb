
<%# display error messages %>

<% if product.errors.any? %>
    <div class="alert-box">
        <button class="close-btn" onclick="this.parentElement.style.display='none';">&times;</button>
        
        <p><%= pluralize(product.errors.count, "error") %> prevented this product from being saved:</p>
        <ul>
            <% product.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with model: product, html: { multipart:true, class: "product-form" } do |form| %>
    <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
    </div>
  
    <div class="form-row">
        <div class="form-group half-width">
            <%= form.label :inventory_count %>
            <div class="input-with-unit">
                <%= form.number_field :inventory_count, class: "form-control", min: 0, placeholder: "0" %>
                <span>pcs</span>
            </div>
        </div>

        <div class="form-group half-width">
            <%= form.label :price %>
            <%= form.number_field :price, step: 0.01, class: "form-control", placeholder: "0.00" %>
         </div>
    </div>

    <div class="form-group">
        <%= form.label :category_id %>
        <%= form.collection_select :category_id, Category.all, :id, :name, include_blank: true %>
    </div>


    <div class="form-group">
        <%= form.label :featured_image, style: "display: block" %>
        <%= form.file_field :featured_image, accept: "image/*", class: "form-control" %>
    </div>


    <div class="form-group">
        <%= form.label :description, style: "display: block" %>
        <%= form.rich_text_area :description %>
    </div>
 
    
    <div class="form-actions">
        <%= form.submit "Save Product", class: "btn" %>
    </div>

<% end %>
  