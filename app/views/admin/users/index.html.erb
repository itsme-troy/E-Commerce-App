<h1>All Users</h1>

<table class="user-table">
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr onclick="window.location='<%= admin_user_path(user) %>'" style="cursor: pointer;">
        <td><%= user.email_address %></td>
        <td><%= user.role %></td>
      </tr>
    <% end %>
  </tbody>
</table>
