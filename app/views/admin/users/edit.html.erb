<h3 class="page-title text-center">Edit User</h3>

<div class="edit-user-form">
  <%= form_with model: [:admin, @user], local: true do |form| %>
    <div class="form-group">
      <%= form.label :email_address %>
      <%= form.text_field :email_address, class: "form-control readonly-field", readonly: true %>
    </div>

    <div class="form-group">
      <%= form.label :role %>
      <%= form.select :role, ["admin", "customer"], {}, class: "form-control" %>
    </div>

    <%= form.submit "Update", class: "btn edit" %>
  <% end %>
</div>
