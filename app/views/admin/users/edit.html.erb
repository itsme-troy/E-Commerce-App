<h1 class="form-title">Edit User</h1>

<div class="edit-user-form">
  <%= form_with model: [:admin, @user], local: true do |form| %>
    <div class="form-group">
      <%= form.label :email_address %>
      <%= form.text_field :email_address, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :role %>
      <%= form.select :role, ["admin", "customer"], {}, class: "form-control" %>
    </div>

    <%= form.submit "Update", class: "btn btn-submit" %>
  <% end %>
</div>
